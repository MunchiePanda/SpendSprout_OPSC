<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Header text style -->
    <style name="HeaderTextStyle">
        <item name="android:textColor">@color/MainTextColor</item>
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Main text style -->
    <style name="MainTextStyle">
        <item name="android:textColor">@color/MainTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- Sub text style -->
    <style name="SubTextStyle">
        <item name="android:textColor">@color/SubTextColor</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Numeric text style -->
    <style name="NumericTextStyle">
        <item name="android:textColor">@color/SubTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:letterSpacing">0.5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Button Style -->
    <style name="CircularImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/circle_icon</item>
        <item name="android:backgroundTint">@color/ButtonColor</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <dimen name="NameDimension">180dp</dimen>

    <!-- Sub header text style -->
    <style name="SubHeaderTextStyle">
        <item name="android:textColor">@color/MainTextColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Edit text background -->
    <style name="EditTextStyle">
        <item name="android:textColor">@color/MainTextColor</item>
        <item name="android:textColorHint">@color/SubTextColor</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>