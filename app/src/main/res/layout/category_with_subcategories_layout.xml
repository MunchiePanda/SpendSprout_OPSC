<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/roundedcorners_background"
    android:backgroundTint="@color/ItemBackgroundColor"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    android:padding="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Main Category Layout -->
    <include layout="@layout/category_layout" />

    <!-- Subcategories RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_Subcategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/roundedcorners_background"
        android:backgroundTint="@color/SubItemBackgroundColor"
        android:padding="8dp"
        android:nestedScrollingEnabled="false"
        tools:itemCount="3"
        tools:listitem="@layout/subcategory_layout" />

</LinearLayout>
