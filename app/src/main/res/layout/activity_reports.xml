<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/BackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/TopBarColor"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- Month Filter and Segmented Control -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <!-- Month Filter Button -->
                <LinearLayout
                    android:id="@+id/btn_MonthFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/roundedcorners_background"
                    android:padding="12dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_chevron_right"
                        android:tint="@color/MainTextColor"
                        android:rotation="90"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Month"
                        android:textColor="@color/MainTextColor"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Segmented Control -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/roundedcorners_background"
                    android:padding="4dp">

                    <!-- Line Chart Button (Selected) -->
                    <LinearLayout
                        android:id="@+id/btn_LineChart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/HighlightTextColor"
                        android:padding="8dp"
                        android:layout_marginEnd="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_line_chart"
                            android:tint="@color/BackgroundColor" />
                    </LinearLayout>

                    <!-- Pie Chart Button (Unselected) -->
                    <LinearLayout
                        android:id="@+id/btn_PieChart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_pie_chart"
                            android:tint="@color/MainTextColor" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Circular Progress Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/roundedcorners_background"
                android:padding="24dp"
                android:layout_marginBottom="24dp"
                android:gravity="center">

                <!-- Circular Progress Indicator -->
                <com.example.spendsprout_opsc.reports.CircularProgressView
                    android:id="@+id/circularProgressView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp" />

                <!-- Progress Amount -->
                <TextView
                    android:id="@+id/txt_ProgressAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R 6000"
                    android:textColor="@color/MainTextColor"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Revenue vs Target Chart Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/roundedcorners_background"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revenue vs. Target by Month"
                    android:textColor="@color/MainTextColor"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <com.example.spendsprout_opsc.reports.ChartView
                        android:id="@+id/chartView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>
            </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header_bar_layout"
        app:menu="@menu/drawer_menu" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_AddReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:tint="@android:color/white" />

</androidx.drawerlayout.widget.DrawerLayout>

