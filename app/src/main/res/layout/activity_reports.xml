<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/BackgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp">

        <!-- Header Bar -->
        <include
            android:id="@+id/header_bar"
            layout="@layout/header_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Date Range Picker -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@drawable/roundedcorners_background"
            android:backgroundTint="@color/ItemBackgroundColor"
            android:layout_margin="10dp"
            android:layout_marginBottom="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_selectDateRange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Date Range"
                android:textColor="@color/MainTextColor"
                android:backgroundTint="@color/ButtonColor"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/txt_dateRange"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="All Time"
                android:textColor="@color/MainTextColor"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:padding="12dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/roundedcorners_background"
            android:backgroundTint="@color/ItemBackgroundColor"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/roundedcorners_background"
                android:backgroundTint="@color/SubItemBackgroundColor"
                android:layout_marginBottom="15dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Budget"
                    style="@style/MainTextStyle"
                    android:textAlignment="center"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart_BudgetOverview"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/roundedcorners_background"
                android:backgroundTint="@color/SubItemBackgroundColor"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category and SubCategory"
                    style="@style/MainTextStyle"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart_Category"
                        android:layout_width="140dp"
                        android:layout_height="140dp" />

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart_Subcategory"
                        android:layout_width="140dp"
                        android:layout_height="140dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

</LinearLayout>


<com.google.android.material.navigation.NavigationView
android:id="@+id/nav_view"
android:layout_width="280dp"
android:layout_height="match_parent"
android:layout_gravity="start"
android:fitsSystemWindows="true"
app:headerLayout="@layout/menu_header_layout"
app:menu="@menu/drawer_menu"
android:backgroundTint="@color/MenuBackgroundColor"
app:itemTextColor="@color/black"
app:subheaderColor="@color/black"
app:itemIconTint="@color/IconColor" />

    </androidx.drawerlayout.widget.DrawerLayout>

