<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:background="@color/TransparentColor"
    android:paddingHorizontal="15dp"
    android:paddingVertical="1dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/img_Category"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        app:srcCompat="@drawable/circle_icon" />

    <View
        android:id="@+id/color_indicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:layout_marginRight="8dp"
        android:background="@color/HighlightTextColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="end"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25 December 2025"
            android:textAlignment="textStart"
            android:textAppearance="@style/SubTextStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_Name"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:text="PnP Party Food"
                android:textAlignment="textStart"
                android:textAppearance="@style/MainTextStyle" />

            <TextView
                android:id="@+id/txt_Description"
                android:layout_width="190dp"
                android:layout_height="match_parent"
                android:text="PnP Party Food"
                android:textAlignment="textStart"
                android:textAppearance="@style/MainTextStyle" />

            <TextView
                android:id="@+id/txt_Amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="- R 100 000"
                android:textAlignment="textEnd"
                android:textAppearance="@style/MainTextStyle" />

            <ImageButton
                android:id="@+id/btn_Edit"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circle_drawable"
                android:src="@drawable/ic_edit"
                android:tint="@color/MainTextColor"
                android:padding="4dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_Spacer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/blank_string"
            android:textAlignment="textEnd"
            android:textAppearance="@style/SubTextStyle" />

    </LinearLayout>

</LinearLayout>