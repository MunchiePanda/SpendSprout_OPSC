<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/BackgroundColor">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header Bar -->
            <include
                android:id="@+id/header_bar"
                layout="@layout/header_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_Transactions"
                android:layout_width="match_parent"
                android:layout_height="961dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/expense_layout"
                android:layout_margin="15dp"
                android:background="@drawable/roundedcorners_background"
                android:backgroundTint="@color/ItemBackgroundColor"/>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_AddTransaction"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:contentDescription="@string/add_transaction"
            android:src="@android:drawable/ic_input_add"
            app:backgroundTint="@color/HighlightTextColor"
            app:tint="@android:color/black" />
    </FrameLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:backgroundTint="@color/MenuBackgroundColor"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/menu_header_layout"
        app:itemIconTint="@color/IconColor"
        app:itemTextColor="@color/black"
        app:menu="@menu/drawer_menu"
        app:subheaderColor="@color/black">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>

